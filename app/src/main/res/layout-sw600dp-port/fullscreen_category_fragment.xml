<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/Category_holder1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

		<ImageView
		    android:id="@+id/imgCategory1"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:scaleType="centerCrop" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/vide1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Category1"
                android:layout_marginTop="20dp"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="60" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vide11"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.65" >
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Category_holder2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ImageView
		    android:id="@+id/imgCategory2"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:scaleType="centerCrop" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/vide2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Category2"
                android:layout_marginTop="20dp"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="60" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vide21"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.65" >
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Category_holder3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
		
        <ImageView
		    android:id="@+id/imgCategory3"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:scaleType="centerCrop" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/vide3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Category3"
                android:layout_marginTop="20dp"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="60" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vide31"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.65" >
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>