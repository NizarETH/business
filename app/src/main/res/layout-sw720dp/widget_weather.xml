<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/meteoContainer"
    android:layout_width="400dp"
    android:layout_height="220dp"
    android:gravity="fill"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/todayMeteo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:weightSum="1"
        android:baselineAligned="false" >

        <LinearLayout
            android:id="@+id/currentTemp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center"
            android:weightSum="1" >

            <ImageView
                android:id="@+id/currentTemp_img"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:gravity="center"
                android:src="@drawable/ic_action_sun_fog_red" />

            <TextView
                android:id="@+id/currentTemp_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="23°"
                android:textColor="#FF0000"
                android:textSize="50sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/minMaxTemp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center"
                android:baselineAligned="false" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="min"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"
                        android:textColor="#777777" />

                    <TextView
                        android:id="@+id/forcast_min_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="14°"
                        android:textSize="20sp"
                        android:textColor="#777777" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="max"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"
                        android:textColor="#777777" />

                    <TextView
                        android:id="@+id/forcast_max_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="17°"
                        android:textSize="20sp"
                        android:textColor="#777777" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#88777777" />
    <LinearLayout
        android:id="@+id/forcastMeteo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:padding="5dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:baselineAligned="false" >

        <LinearLayout
            android:id="@+id/forcast1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/forcast1_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_action_sun_fog_red" />

            <com.euphor.paperpad.widgets.AutoResizeTextView
                android:id="@+id/forcast1_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="23C°"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:textColor="#777777" />

            <com.euphor.paperpad.widgets.AutoResizeTextView
                android:id="@+id/forcast1_txtDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="lun"
                android:textSize="18sp"
                android:textColor="#777777" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/forcast2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/forcast2_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_action_sun_fog_red" />

            <com.euphor.paperpad.widgets.AutoResizeTextView
                android:id="@+id/forcast2_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="23C°"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:textColor="#777777" />

            <com.euphor.paperpad.widgets.AutoResizeTextView
                android:id="@+id/forcast2_txtDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="mar"
                android:textSize="18sp"
                android:textColor="#777777" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/forcast3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/forcast3_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_action_sun_fog_red" />

            <com.euphor.paperpad.widgets.AutoResizeTextView
                android:id="@+id/forcast3_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:text="23C°"
                android:textSize="18sp"
                android:textColor="#777777" />

            <com.euphor.paperpad.widgets.AutoResizeTextView
                android:id="@+id/forcast3_txtDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="mer"
                android:textSize="18sp"
                android:textColor="#777777" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/forcast4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/forcast4_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_action_sun_fog_red" />

            <com.euphor.paperpad.widgets.AutoResizeTextView
                android:id="@+id/forcast4_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="23C°"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:textColor="#777777" />

            <com.euphor.paperpad.widgets.AutoResizeTextView
                android:id="@+id/forcast4_txtDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="jeu"
                android:textSize="18sp"
                android:textColor="#777777" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/forcast5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/forcast5_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_action_sun_fog_red" />

            <com.euphor.paperpad.widgets.AutoResizeTextView
                android:id="@+id/forcast5_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="23C°"
                android:layout_marginBottom="5dp"
                android:textSize="18sp"
                android:textColor="#777777" />

            <com.euphor.paperpad.widgets.AutoResizeTextView
                android:id="@+id/forcast5_txtDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ven"
                android:textSize="18sp"
                android:textColor="#777777" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>