<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<View 
	    android:id="@+id/emptySpace"
	    android:layout_width="match_parent"
	    android:minHeight="120dp"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:background="#88000000" />
	<LinearLayout 
	    android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff" >
    <LinearLayout
        android:id="@+id/TitleEventLLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:gravity="left|center_vertical" >

        <TextView
            android:id="@+id/TitleEvent_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text TEST"
            android:textColor="#520210"
            android:textSize="19sp" />
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutSummery"        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#ffffff"
        android:paddingTop="10dp" >

        <ListView
            android:id="@+id/listEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>

    </LinearLayout>
    
    <View 
        android:id="@+id/dummySpace"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_tab_fragment_bottom"
        android:focusable="false"
        android:clickable="false" />

</LinearLayout>