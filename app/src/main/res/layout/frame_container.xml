<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RLMainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/tabsFragment"
        android:layout_above="@+id/ff_radio_fragment"
        android:visibility="gone" >

       
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/tabsFragment"
        android:layout_above="@+id/ff_radio_fragment"
        android:visibility="visible" >
    </FrameLayout>
    <VideoView 
            android:id="@+id/videoView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
             android:layout_alignParentLeft="true"
             android:layout_alignParentTop="true"
             android:layout_alignParentBottom="true"
             android:visibility="gone" />
    

    <FrameLayout
        android:id="@+id/tabsFragment"
        android:layout_width="@dimen/width_tab_fragment"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/ff_radio_fragment" />
    
    <FrameLayout
        android:id="@+id/ff_radio_fragment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />
    <RelativeLayout
            android:id="@+id/RLMainActivity_dim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" >
    </RelativeLayout>
</RelativeLayout>
</RelativeLayout>