<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

        <ImageView
            android:id="@+id/radioImg"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/music" />

        <ImageView
            android:id="@+id/img_play_pause"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/ic_av_pause" />

        <TextView
            android:id="@+id/radioTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="0:00"
            android:visibility="gone"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/img_stop"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@id/img_play_pause"
            android:src="@drawable/ic_av_stop" />

        <TextView
            android:id="@+id/txt_radio_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_stop"
            android:layout_toRightOf="@id/radioImg"
            android:gravity="left|center_vertical"
            android:lines="1"
            android:singleLine="true"
            android:maxLines="1"
            android:text="radio name"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>