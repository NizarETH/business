<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/titleProductHolder_widget"
    android:orientation="vertical" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left" >

            <TextView
                android:id="@+id/titleTV_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:layout_marginTop="2dp"
                android:layout_alignParentLeft="true"
                android:textSize="14sp"
                android:text="Titre Page Produit"
                android:textStyle="bold" />
            
        <ImageView
            android:id="@+id/show_widget"
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:visibility="visible" />

        <!--ImageView
            android:id="@+id/hide_widget"
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:visibility="gone" /-->
        
        


        <com.euphor.paperpad.widgets.ArrowImageView 
                       android:id="@+id/hide_widget"
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:rotation="-90" />
            	            
        </RelativeLayout>
        <View
            android:id="@+id/separator_widget" 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#88777777"/>


</LinearLayout>